@model WeirdEnsemble2.Models.Product
@{
    ViewBag.Title = "Review for " + Model.Brand + " " + Model.Name;
}

<div class="row">
    <h2 class="text-center">Write a Review for @Model.Brand @Model.Name</h2>
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="prodId" value="@Model.Id"/>
            <div class="form-group">
                <label for="rating" class="control-label">Rating</label>
                <select name="rating" class="form-control">Select a rating
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="comment" class="control-label">Comments</label>
                @Html.TextArea("comment", new { @class="form-control"})
            </div>
            <input type="submit" value="Submit" class="btn btn-info" />
        }
    </div>
</div>
